        "core_operations": {
            "listObjects": {
                "command": "ListObjectsV2Command",
                "parameters": {
                    "Bucket": "Bucket name",
                    "Prefix": "Current folder path",
                    "Delimiter": "'/' to separate folders",
                    "ContinuationToken": "For pagination"
                },
                "returns": "CommonPrefixes (folders) and Contents (files)"
            },
            "uploadFile": {
                "small_files": {
                    "threshold": "< 5MB",
                    "method": "PutObjectCommand",
                    "single_request": true
                },
                "large_files": {
                    "threshold": ">= 5MB",
                    "method": "Upload from @aws-sdk/lib-storage",
                    "multipart": true,
                    "chunk_size": "5MB default",
                    "concurrent_parts": "4 parallel uploads"
                }
            },
            "downloadFile": {
                "command": "GetObjectCommand",
                "presigned_url": "Generated with getSignedUrl (60s expiration)",
                "download_trigger": "window.location.href or anchor click"
            },
            "deleteObjects": {
                "command": "DeleteObjectsCommand",
                "batch_support": "Up to 1000 objects per request",
                "folder_deletion": "Recursive list + batch delete"
            },
            "createFolder": {
                "command": "PutObjectCommand",
                "key_format": "path/to/folder/ (trailing slash)",
                "body": "Empty string",
                "note": "S3 doesn't have true folders, uses key prefixes"
            },
            "generateShareableLink": {
                "command": "GetObjectCommand",
                "presigner": "getSignedUrl",
                "expiration": "Configurable (1-7 days)",
                "returns": "Time-limited public URL"
            }
